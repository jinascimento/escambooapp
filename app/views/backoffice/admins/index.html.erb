
<h1 class="page-header">Administradores</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    Listando Categorias
    <% if policy(@admin).new? %>
      <%= link_to new_backoffice_admin_path, class: "btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    <% end %>
  </div>
    <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Tipo de acesso</th>
          </tr>
        </thead>
        <tbody>
          <% @admin.each do |admins| %>
            <tr>
              <td><%= admins.id %></td>
              <td><%= admins.name %></td>
              <td><%= admins.email %></td>
              <td><%= admins.role_i18n %></td>
              <td style="whidth: 150px">
                <%= link_to edit_backoffice_send_mail_path(admins.id), class:"btn btn-info btn-circle", remote: true do %>
                  <i class="fa fa-envelope"></i>
                <% end %>
                <%= link_to edit_backoffice_admin_path(admins.id), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <% if current_admin.id != admins.id && policy(admins).destroy? %>
                  <%= link_to backoffice_admin_path(@admin), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "VocÃª deseja realmente excluir (<b>#{admins.email}<b>) ?"} do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                <% else %>
                <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-circle" do %>
                <i class="fa fa-minus"></i>
                    <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      <!-- /.table-responsive -->
  </div>
    <!-- /.panel-body -->
</div>

<%= render partial: 'backoffice/admins/shared/send_mail' %>
