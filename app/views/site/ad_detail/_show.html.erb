<div class="well">
  <div class="card mt-4">
    <%= image_tag @ad.picture.url(:large), class: "card-img-top img-fluid" %>
    <div class="card-body">
      <h3 class="card-title"><%= @ad.title %></h3>
      <h4><%= humanized_money_with_symbol @ad.price %></h4>
      <%= @ad.description.html_safe %>
    </div>
  </div>
</div>

<div class="well well-sm">
  <div class="ratings">
    <p class="pull-right"><%= @ad.rates('quality').count %> <%= t('labels.reviews') %></p>
    <%= rating_for @ad, 'quality', disable_after_rate: false %>
  </div>
</div>
<!-- /.card -->

<div class="well">

  <% if member_signed_in? %>
    <div class="text-right">
      <button type="button" class="btn btn-success" data-toggle="modal" data-target="#commentModal">
        Deixe um coment√°rio
      </button>
    </div>
  <% else %>
    <div class="text-right">
      <%= link_to "Efetue login para comentar", new_member_session_path, class: 'btn btn-success' %>
    </div>
  <% end %>

  <hr>
  <div>
    <%= render partial: 'site/ad_detail/comments' %>
  </div>
</div>

<%= render partial: 'site/ad_detail/comment_modal' %>